{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "npmScope": "workspace-samples",
  "cli": {
    "packageManager": "yarn"
  },
  "affected": {
    "defaultBase": "main"
  },
  "implicitDependencies": {
    "package.json": {
      "dependencies": "*",
      "devDependencies": "*"
    },
    ".eslintrc.json": "*"
  },
  "tasksRunnerOptions": {
    "default": {
      "runner": "@nrwl/nx-cloud",
      "options": {
        "cacheableOperations": [
          "package",
          "build",
          "lint",
          "test",
          "e2e"
        ],
        "accessToken": "MDRkZWFmZjUtNGYyOC00NDFlLWI5YTItMmIwNjI4ZmE2YjczfHJlYWQtd3JpdGU="
      }
    }
  },
  "targetDefaults": {
    "build": {
      "dependsOn": [
        "^build"
      ]
    }
  },
  "workspaceLayout": {
    "appsDir": "packages",
    "libsDir": "packages"
  },
  "defaultProject": "desktop"
}
